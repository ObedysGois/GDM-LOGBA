// Fun√ß√£o utilit√°ria para buscar um registro pelo ID
async function getDeliveryRecordById(id) {
  const docRef = doc(db, 'deliveries', id);
  const docSnap = await getDoc(docRef);
  if (docSnap.exists()) {
    return { id: docSnap.id, ...docSnap.data() };
  }
  return null;
}

